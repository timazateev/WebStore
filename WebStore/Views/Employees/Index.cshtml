@model IEnumerable<WebStore.Models.Employee>


@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h3>Employees</h3>

    <hr />

    <a asp-action="Edit" class="btn btn-primary">Add new employee</a>
    <a asp-action="Create" class="btn btn-primary">Create new employee</a>

    <table class="table">
        <thead>
        <th>#</th>
        <th>Surname</th>
        <th>FirstName</th>
        <th>Patronymic</th>
        <th>Age</th>
        <th></th>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.id">@employee.id</a>
                    </td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.id">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-controller="Home" asp-action="Index">Home</a>
    </p>

</div>

