@using WebStoreDomain.Entities.Identity
@model WebStore.Models.Employee

@{
    ViewData["Title"] = $"Employee id:{Model.id}";
}

<h1>Details about Employee</h1>

<div class="container">
    <div>
        <h4>Employee</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patronymic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patronymic)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
        </dl>
    </div>
    @if (User.IsInRole(Role.Administrators))
    {
        <div>
            <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-default"> Edit employee </a> |
            <a asp-action="Delete" asp-route-id="@Model.id" class="btn btn-danger"> Delete employee </a> |
        </div>
    }
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>